{
  "name": "system-health-monitor",
  "version": "1.0.0",
  "author": "@greenido",
  "description": "Enhanced system health monitoring with detailed alerts",
  "main": "system-health-monitor.js",
  "scripts": {
    "start": "node system-health-monitor.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "monitoring",
    "aws",
    "ec2",
    "linux",
    "server",
    "health",
    "monitor",
    "alert",
    "system",
    "health",
    "alerts",
    "slack",
    "cpu",
    "memory",
    "swap",
    "disk",
    "usage",
    "threshold",
    "alerting",
    "notification",
    "system"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "system-health-monitor.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/test-*.js",
      "**/*.test.js"
    ]
  }
} 